<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="android:background">@drawable/layer_titlebar_bg</item>
        <item name="title_bar_leftAndRightTextColor">@color/default_text_color</item>
        <item name="title_bar_leftAndRightTextSize">@dimen/textSize_16</item>
        <item name="title_bar_titleTextSize">@dimen/textSize_18</item>
        <item name="title_bar_leftAndRightPadding">@dimen/middle</item>
    </style>
</resources>
